  <script>clear();</script> 

  <div class="row">
	<div id="NewMicropost" style="display:none">
	<% @planmicropost.parent = $CURRENT_PLAN.locale %>
	<%= form_for(@planmicropost) do |f| %>
	  <div class="span7">
	  <%= f.radio_button :infotype, "track", checked: "checked", onclick: "selecttrack()" %>线路
	  <%= f.radio_button :infotype, "sight", checked: "unchecked", onclick: "selectsight()" %>景点
	  <%= f.radio_button :infotype, "eat", checked: "unchecked", onclick: "selecteat()" %>好吃
	  <%= f.radio_button :infotype, "hotel", checked: "unchecked", onclick: "selecthotel()" %>好住
	  </div>
	  <%= f.hidden_field :parent %>
	  <div class="span2">
		<%= f.text_field :infoname, placeholder: "景点名称", class: "plan_full"  %>
	  </div> 
	  <div class="span2">
		<%= f.text_field :startpoint, placeholder: "行程起点", class: "plan_full"  %>
	  </div> 
	  <div class="span7">
		<%= f.text_field :endpoint, placeholder: "行程终点", class: "plan_full"  %>
	  </div>
	  
	  <div class="span7">
		<%= f.text_area :content, placeholder: "填写具体信息...", class: "plan_full"  %>
	  </div>
	  
	  <div class = "span7">
		<%= f.submit "加入计划", class: "btn btn-primary" %>
	  </div>
	  
	<% end %>  
	</div>
	
		<div class="span3">
			<% if $CURRENT_PLAN.traveltracks.count != 0 %>
				<button id="AddBtn" class="btn btn-primary" onclick="AddMicropost()">添加新信息</button>
			<% end %>
		</div>
		<div class="span3">
			<button id="QuitMicropostBtn" class="btn btn-primary" style="display:none" onclick="QuitMicropost()">取消添加</button>
		</div>

  </div>	
  