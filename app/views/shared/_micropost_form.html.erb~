<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="field">

  <%= f.radio_button :infotype, "sight", checked: "unchecked", onclick: "selectsight()" %>景点
  <%= f.radio_button :infotype, "track", checked: "unchecked", onclick: "selecttrack()" %>线路
  <%= f.radio_button :infotype, "note", checked: "unchecked", onclick: "selectnote()" %>游记
  <%= f.radio_button :infotype, "eat", checked: "unchecked", onclick: "selecteat()" %>吃
  <%= f.radio_button :infotype, "hotel", checked: "unchecked", onclick: "selecthotel()" %>住
   
  <div class="infoname">
    <%= f.text_field :infoname, placeholder: "景点名称" %>
  </div>  
  <div class="parent">
    <%= f.text_field :startpoint, placeholder: "行程起始地点" %>
  </div>  
  <div class="endpoint">
    <%= f.text_field :endpoint, placeholder: "行程的终点" %>
  </div>
  <div class="parent">
    <%= f.text_field :parent, placeholder: "所属地点", display: "block" %>
  </div>
  <div class="content">
    <%= f.text_area :content, placeholder: "填写具体信息..." %>
  </div>
    <div class="content">
    <%= f.file_field :photo %>
  </div>
  
  <%= f.submit "提交", class: "btn btn-large btn-primary" %>
  
  <script>clear();</script> 
  
<% end %>
 
