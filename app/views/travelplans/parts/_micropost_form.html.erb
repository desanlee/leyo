<script type="text/javascript" language="JavaScript">
<!--
function enlarge(photoid) { 
	document.getElementById(photoid).className="micropost_edit_big";
	document.getElementById("999"+photoid).style.display="block";
}
function makesmall(photoid) { 
	document.getElementById(photoid).className="micropost_edit_small";
	document.getElementById("999"+photoid).style.display="none";
}

// 输入一条景点信息
function selectsight() {
  document.getElementById("micropost_infoname").style.display="block";
  document.getElementById("micropost_startpoint").style.display="none";
  document.getElementById("micropost_endpoint").style.display="none";
  document.getElementById("micropost_infoname").placeholder="景点名称";
}

//输入一条线路信息
function selecttrack() {
  document.getElementById("micropost_startpoint").style.display="block";
  document.getElementById("micropost_endpoint").style.display="block";
  document.getElementById("micropost_infoname").style.display="none";
  document.getElementById("micropost_startpoint").placeholder="线路起点";
  document.getElementById("micropost_endpoint").placeholder="线路终点";
}

// 输入一条餐厅信息
function selecteat() {
  document.getElementById("micropost_infoname").style.display="block";
  document.getElementById("micropost_startpoint").style.display="none";
  document.getElementById("micropost_endpoint").style.display="none";
  document.getElementById("micropost_infoname").placeholder="美食或饭馆的名称";
}

// 输入一条住宿信息
function selecthotel() {
  document.getElementById("micropost_infoname").style.display="block";
  document.getElementById("micropost_startpoint").style.display="none";
  document.getElementById("micropost_endpoint").style.display="none";
  document.getElementById("micropost_infoname").placeholder="旅馆或驻地名称";
}

--></script>

<%@ttrack = $CURRENT_TRAVELTRACK%> 
<% if @ttrack != nil then%>

	<%= form_for @micropost  do |f|  %>
		<div>
			<% focuspara = 'enlarge(' << String(@ttrack.id) << ')' %>
			<% leavepara = 'makesmall(' << String(@ttrack.id) << ')' %>
			<%= f. text_area :content, id: @ttrack.id, placeholder: "+  添加攻略", class: "micropost_edit_small", onfocus: focuspara %>
		</div>
		<%= f.hidden_field :parent,  value:  @ttrack.terminal %>
		<%= f.hidden_field :owner, value: @ttrack.id %>
		
		<div id = '999<%= @ttrack.id %>' class = "" style="display:none">
			
			<div class="infoname">
			  	<%= f.text_field :infoname, placeholder: "景点名称" %>
			 </div>  
			  <div class="parent">
			    	<%= f.text_field :startpoint, placeholder: "行程起始地点", style: "display:none" %>
			  </div>  
			  <div class="endpoint">
			    	<%= f.text_field :endpoint, placeholder: "行程的终点", style: "display:none" %>
			  </div>
			
			  <div class="">
				<%= f.radio_button :infotype, "sight", checked: true, onclick: "selectsight()" %>景点
				<%= f.radio_button :infotype, "track", checked: "unchecked", onclick: "selecttrack()" %>线路
				<%= f.radio_button :infotype, "eat", checked: "unchecked", onclick: "selecteat()" %>美食
				<%= f.radio_button :infotype, "hotel", checked: "unchecked", onclick: "selecthotel()" %>住宿
		 	</div>
			<div class="span3"><%= f.file_field :photo %></div>
			<%= f.submit "OK", class: "span btn btn-small btn-primary plandate" %>
			<div class="span btn btn-small btn-primary plandate" onclick='<%=leavepara%>'>取消</div>
		</div>
	  <% end %>
  
  <% end %>
