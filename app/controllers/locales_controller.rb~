class LocalesController < ApplicationController

  def managelocale
  	  @locale = Locale.new(params[:locale])
 # 	  @locales = Locale.paginate(page: params[:page])
 @plocale = "北京"
 @locales=Locale.paginate(page: params[:page]).find(:all, conditions: [ "parent is (?)",  @plocale])
  	  @followedrelationships = Followedlocale.paginate(page: params[:page])
  	  @followedlocale = Followedlocale.new(params[:followedlocale])
  end
  
  def create
    @locale = Locale.new(params[:locale])
    if @locale.save
      redirect_to :back
    else
      redirect_to root_url
    end
  end


  def update
    @locale = Locale.find(params[:id])
    if @locale.update_attributes(params[:locale])
      flash[:success] = "Locale updated!"
      redirect_to :back
    else
      render 'edit'
    end
  end
  
  def destroy
    @locale = Locale.find(params[:id])
	@locale.destroy
	redirect_to :back
  end
  
end